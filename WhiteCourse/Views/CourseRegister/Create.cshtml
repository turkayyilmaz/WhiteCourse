@model CourseRegister
@{
    ViewData["Title"] = "Create";
}
<h2>Create Course Register</h2>
<hr>
<form asp-controller="CourseRegister" asp-action="Create" method="post">
    <div class="mb-3">
        <label asp-for="StudentId" class="form-label">Student Name</label>
        <select asp-for="StudentId" asp-items="ViewBag.Students" class="form-select">@*Important area*@
            <option>Select</option>
        </select> 
    </div>
    <div class="mb-3">
        <label asp-for="CourseId" class="form-label">Course Name</label>
        <select asp-for="CourseId" asp-items="ViewBag.Courses" class="form-select">@*Important area*@
            <option>Select</option>
        </select> 
    </div>
    <button type="submit" class="btn btn-secondary">Create</button>
</form>