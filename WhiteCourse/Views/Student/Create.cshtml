@model Student
@{
    ViewData["Title"] = "Create";
}
<h2>Create Student</h2>
<hr>
<form asp-controller="Student" asp-action="Create" method="post">
    <div class="mb-3">
        <label asp-for="StudentName" class="form-label"></label>
        <input asp-for="StudentName" class="form-control">
    </div>
    <div class="mb-3">
        <label asp-for="StudentSurname" class="form-label"></label>
        <input asp-for="StudentSurname" class="form-control">
    </div>
    <div class="mb-3">
        <label asp-for="StudentEmail" class="form-label"></label>
        <input asp-for="StudentEmail" class="form-control">
    </div>
    <div class="mb-3">
        <label asp-for="StudentPhone" class="form-label"></label>
        <input asp-for="StudentPhone" class="form-control">
    </div>
    <button type="submit" class="btn btn-secondary">Create</button>
</form>
