@model Student
@{
    ViewData["Title"] = "Create";
}
<h2>Edit Student</h2>
<hr>
<div class="row">
    <div class="col-8">
        <form asp-controller="Student" asp-action="Edit" method="post">
            <input type="hidden" asp-for="StudentId">
            <div class="mb-3">
                <label asp-for="StudentName" class="form-label"></label>
                <input asp-for="StudentName" class="form-control">
            </div>
            <div class="mb-3">
                <label asp-for="StudentSurname" class="form-label"></label>
                <input asp-for="StudentSurname" class="form-control">
            </div>
            <div class="mb-3">
                <label asp-for="StudentEmail" class="form-label"></label>
                <input asp-for="StudentEmail" class="form-control">
            </div>
            <div class="mb-3">
                <label asp-for="StudentPhone" class="form-label"></label>
                <input asp-for="StudentPhone" class="form-control">
            </div>
            <button type="submit" class="btn btn-secondary">Edit</button>
        </form>
    </div>
    <div class="col-4">
        <h4>Courses</h4>
        <hr>
        <ul>
            @foreach(var item in Model.CourseRegisters)
            {
                <li>@item.Course.CourseName</li>
            }
        </ul>
    </div>
</div>